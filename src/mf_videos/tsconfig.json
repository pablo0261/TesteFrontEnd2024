{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "app.ts",
    "src/**/*.ts",
    "public/views/main.ts"
  ],
  "exclude": ["node_modules"]
}